@model IQueryable<KuaforRandevu2.Models.Entities.Gallery>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ui link cards centered padded">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="image">
                <img src="~/img/@item.ImgPath">
            </div>
            <div class="content">
                <div class="description">
                    @item.ImgText
                </div>
            </div>
            <div class="extra content">
                <span class="right floated">
                    @item.ImgDate.ToShortDateString()
                </span>
            </div>
        </div>
    }
</div>
