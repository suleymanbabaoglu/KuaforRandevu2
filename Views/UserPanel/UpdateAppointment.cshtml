@model KuaforRandevu2.Models.Entities.Appointment
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

    
<div class="ui container centered grid padded">
    <div class="row">
        <div class="eight wide column">
            @using (Html.BeginForm("UpdateAppointment", "UserPanel", null, FormMethod.Post, true, new { @class = "ui large form error"}))
            {
                @Html.HiddenFor(m => m.ExpertId);
                @Html.HiddenFor(m => m.UserId);
                @Html.Hidden("existDate", Model.AppointmentDate);             
                @Html.TextBox("FullName", ViewBag.user.FullName, "", new {  @readonly = "readonly" });         
                @Html.TextBoxFor(m => m.AppointmentDate, new { type = "datetime-local" });
                <button class="ui fluid large teal submit button" type="submit">Update</button>
            }
            <a class="ui blue button" href="~/UserPanel/AppointmentManagement">Appointments</a>
            <a class="ui button default" href="~/UserPanel">User Home</a>
        </div>
    </div>
</div>


