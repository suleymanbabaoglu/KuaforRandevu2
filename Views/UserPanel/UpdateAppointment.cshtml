@model KuaforRandevu2.Models.Entities.Appointment
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

    <h5>@ViewBag.Message</h5>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("UpdateAppointment", "UserPanel", null, FormMethod.Post, true, new { @class = "form-group" }))
            {
                @Html.HiddenFor(m => m.ExpertId);
                @Html.HiddenFor(m => m.UserId);
                @Html.Hidden("existDate", Model.AppointmentDate);
                @Html.LabelFor(m => m.Expert.User.FullName, "Expert");
                @Html.TextBox("FullName", ViewBag.user.FullName, "", new { @class = "form-control", @readonly = "readonly" });
                @Html.LabelFor(m => m.AppointmentDate, "Appointment Date");

                <input class="form-control" type="datetime-local" name="AppointmentDate" />
                <button class="btn btn-primary" type="submit">Update</button>
            }
            <a class="btn btn-warning" href="~/UserPanel/AppointmentManagement">Appointments</a> 
            <a class="btn btn-secondary" href="~/UserPanel">User Home</a>
        </div>
    </div>
</div>


