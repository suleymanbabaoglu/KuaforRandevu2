@model KuaforRandevu2.Models.Entities.Appointment
@{
    ViewData["Title"] = "AppointmentManagement";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("AppointmentManagement", "UserPanel", null, FormMethod.Post, true, new { @class = "form-group" }))
            {
                @Html.LabelFor(m => m.Expert.User.FullName, "Expert");
                @Html.TextBoxFor(m => m.Expert.User.FullName, new { @class = "form-control", @readonly="readonly" });
                @Html.LabelFor(m => m.AppointmentDate, "Appointment Date");
                @Html.TextBoxFor(m => m.AppointmentDate, new { @class = "form-control" });
                <button class="btn btn-primary" type="submit">Update</button>
            }
            <a class="btn btn-secondary" href="~/UserPanel">User Home</a>
        </div>
    </div>
</div>



