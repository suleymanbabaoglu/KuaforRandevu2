@model IQueryable<KuaforRandevu2.Models.Entities.Appointment>
@{
    Layout = "_UserLayout";
}
<div class="ui container centered padded grid">
    <div class="row">
        <div class="wide column">
            <table class="ui attached inverted table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Expert</th>
                        <th>Appointment Date</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.Id</td>
                            <td>@appointment.Expert.User.FullName</td>
                            <td>@appointment.AppointmentDate</td>
                            <td>
                                <a href="~/UserPanel/UpdateAppointment/@appointment.Id">Edit</a>
                            </td>
                            <td>
                                <a href="~/UserPanel/DeleteAppointment/@appointment.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <br />
            <a class="ui button primary" href="~/UserPanel/SetAppointment">Set Appointment</a>
            <a class="ui button default" href="~/UserPanel">User Home</a>
        </div>
    </div>
</div>
