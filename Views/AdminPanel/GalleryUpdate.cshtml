@model KuaforRandevu2.Models.Entities.Gallery
@{
    Layout = "_AdminLayout";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("GalleryUpdate", "AdminPanel", null, FormMethod.Post, true, new { @class = "form-group", enctype = "multipart/form-data", accept = "image/jpg, image/png" }))
            {
                <div class="col-md-3">
                    <img src="~/img/@Model.ImgPath" class="img-responsive" style="width:100%" alt="@Model.ImgText" />
                </div>
                @Html.HiddenFor(m => m.ImgUserId);
                @Html.HiddenFor(m => m.ImgPath);
                @Html.HiddenFor(m=>m.ImgDate);
                @Html.HiddenFor(m => m.Id);
                <br />
                @Html.LabelFor(m => m.ImgText, "Image Description");
                @Html.TextBoxFor(m => m.ImgText, new { @class = "form-control" });



                <button class="btn btn-primary" type="submit">Update</button>
            }
            <a class="btn btn-secondary" href="~/AdminPanel">Admin Home</a>
        </div>
    </div>
</div>

