@model KuaforRandevu2.Models.Entities.Expert
@{
    Layout = "_AdminLayout";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("ExpertUpdate", "AdminPanel", null, FormMethod.Post, true, new { @class = "form-group" }))
            {
                <h3>@ViewBag.userFullName</h3>
                <br />
                @Html.TextBoxFor(m => m.ExpertJob, new { @class = "form-control" });
                @Html.HiddenFor(m=>m.UserId)
                <button class="btn btn-primary" type="submit">Update</button>
            }
            <a class="btn btn-secondary" href="~/AdminPanel">Admin Home</a>
        </div>
    </div>
</div>

