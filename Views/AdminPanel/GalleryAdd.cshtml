@model KuaforRandevu2.Models.Entities.Gallery
@{
    Layout = "_AdminLayout";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("GalleryAdd", "AdminPanel", null, FormMethod.Post, true, new { @class = "form-group", enctype = "multipart/form-data", accept = "image/jpg, image/png" }))
            {               
                <br />
                <input type="file" name="galleryImage" />
                <br />
                @Html.LabelFor(m => m.ImgText, "Image Description");
                @Html.TextBoxFor(m => m.ImgText, new { @class = "form-control" });



                <button class="btn btn-primary" type="submit">Add</button>
            }
            <a class="btn btn-secondary" href="~/AdminPanel">Admin Home</a>
        </div>
    </div>
</div>

