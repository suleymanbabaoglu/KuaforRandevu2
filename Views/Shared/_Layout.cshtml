<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KuaforRandevu</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="#">KuaforRandevu</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Content("~/")">Homepage</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Content("~/FrontSide/AboutUs")">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Content("~/FrontSide/Experts")">Experts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Content("~/FrontSide/Gallery")">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Content("~/FrontSide/Contact")">Contact</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("user"))
                             {
                                 <li class="nav-item">
                                     <div class="bg-secondary" style="border-radius: 10px">
                                         <a class="nav-link text-dark">Appointment</a>
                                     </div>
                                 </li>
                             }
                            <li class="nav-item">
                                <div class="bg-primary" style="border-radius: 10px">
                                    <a class="nav-link text-dark" href="@Url.Content("~/Login")">@User.Identity.Name</a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="@Url.Content("~/Login")">Login</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019  <a href="#">- KuaforRandevu -</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
